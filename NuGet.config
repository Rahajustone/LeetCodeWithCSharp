<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <config>
    <!-- Keep NuGet packages in a local folder that works on Linux and Windows -->
    <add key="globalPackagesFolder" value=".nuget/packages" />
  </config>

  <!-- Define the public NuGet source -->
  <packageSources>
    <clear />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
  </packageSources>

  <!-- Prevent any Windows-specific fallback folders -->
  <fallbackPackageFolders>
    <clear />
  </fallbackPackageFolders>
</configuration>
